#!/bin/bash

PERC=$(cat /sys/class/power_supply/BAT0/capacity)
STATUS=$(cat /sys/class/power_supply/AC/online)

BLC="#282828"
GRN="#b8bb26"
WHT="#ebdbb2"
RED="#fb4934"

FG=$WHT
BG=$BLC

BAT="ÔâÄ $PERC" && [ $PERC -gt 90 ] && [[ $STATUS -eq 1 ]] && dunstify "Battery charged!"
[ $PERC -lt 90 ] && BAT="ÔâÅ $PERC"
[ $PERC -lt 60 ] && BAT="ÔâÇ $PERC"
[ $PERC -lt 40 ] && BAT="ÔâÉ $PERC"
[ $PERC -lt 15 ] && BAT="ÔâÑ $PERC" && [[ $STATUS -eq 0 ]] && BG=$RED && FG=$BLC && dunstify -u critical -t 10 "Battery low!"

[[ $STATUS -eq 1 ]] && BAT="üîå $BAT" && BG=$GRN && FG=$BLC

# if [[ $STATUS -eq 1 ]] ; then
#   BAT="ÔÉß $BAT"
#   BG=$GRN
#   FG=$BLC
# else
#   BG=$BLC
#   FG=$WHT
# fi


echo "^c$FG^^b$BG^$BAT%^d^"
