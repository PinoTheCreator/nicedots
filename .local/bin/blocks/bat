#!/bin/sh

# select color theme
. ~/.local/bin/blocks/color_themes/onedark

PERC=$(cat /sys/class/power_supply/BAT0/capacity)
PLUG=$(cat /sys/class/power_supply/AC/online)
# STATUS=$(cat /sys/class/power_supply/BAT0/status)


BG=$black
FG=$orange

ICON="" && [ $PERC -gt 90 ] && [[ $PLUG -eq 1 ]] && dunstify "Battery charged!" "Disconnect AC"
[ $PERC -lt 90 ] && ICON=""
[ $PERC -lt 60 ] && ICON=""
[ $PERC -lt 40 ] && ICON=""
[ $PERC -lt 15 ] && ICON="" && [[ $PLUG -eq 0 ]] && FG=$red && BG=$black && dunstify -u critical -r 123456 "Battery low!"

(($PLUG)) && ICON="$ICON" && FG=$green && BG=$black 

[[ $BLOCK_BUTTON -eq 6 ]] && st -e $EDITOR "$0"


echo "^b$FG^^c$BG^ $ICON ^c$FG^^b$BG^ $PERC%"
