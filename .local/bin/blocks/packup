#!/bin/sh

. ~/.local/bin/blocks/color_themes/onedark

FG=$black
BG=$white

YES=$(checkupdates | sed 's/ .*//')
TITLE="Updates Available!"
NUM=$(checkupdates | wc -l)
MAX=3

notify_send(){
  [[ $YES ]] && dunstify "$TITLE" "$YES" -i system-software-update || \
  dunstify "No $TITLE" "Your system is fresh as hell" 
}

case $BLOCK_BUTTON in
  1) notify_send;;
  6) $TERMINAL -e $EDITOR "$0";;
esac

[[ $NUM -ge 10 ]] && notify_send && BG=$green && FG=$black
echo "^b$BG^^c$FG^ ï£” ^c$BG^^b$FG^ $NUM^d^"
