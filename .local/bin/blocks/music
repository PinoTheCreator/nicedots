#!/bin/sh

# case $BLOCK_BUTTON in
#   6) st -e $EDITOR "$0"
# esac

[[ $BLOCK_BUTTON -eq 6 ]] && st -e $EDITOR "$0"

WHT="#ebdbb2"
BLC="#282828"
GRN="#1ed760"

FG=$WHT
BG=$BLC
ICON="ðŸ“»"

#DATA=$(playerctl metadata --format '{{ trunc(default( title , "-" ), 14) }}' 2>/dev/null || printf "Nothing to play") 
DATA=$(scrollepoch $(playerctl metadata --format "{{trunc(title,21)}}" 2>/dev/null || echo "Nothing to play"))

playerctl metadata 2>/dev/null | grep -iq spotify && FG=$BLC && BG=$GRN && ICON="ï†¼" 

echo "^c$FG^^b$BG^ $ICON $DATA ^d^"
