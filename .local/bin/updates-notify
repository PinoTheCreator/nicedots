#!/bin/sh

IFS=$'' # sets field separator as newline

LIST=$( checkupdates | sed 's/ .*//')
NUM=$( echo $LIST | wc -l )
MAX=7

TITLE="Updates Available"
APPEND=$(test $NUM -gt $MAX && echo 'and' $(($NUM - $MAX)) 'other')

if (($NUM)); then
  dunstify "$TITLE" "$( echo $LIST | head -n$MAX )\n\n$APPEND" -i system-software-update
else
  dunstify "No $TITLE" "Your system is fresh as hell"
fi

pkill -RTMIN+16 dwmblocks
