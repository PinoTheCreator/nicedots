timeout 300 'pidof gtklock || gtklock -d'
timeout 400 'test $(cat /sys/class/power_supply/AC/online) -eq 0 && hyprctl dispatch dpms off'
timeout 600 'test $(cat /sys/class/power_supply/AC/online) -eq 0 && systemctl suspend'
before-sleep 'pidof gtklock || gtklock -d'
after-resume 'hyprctl dispatch dpms on'
